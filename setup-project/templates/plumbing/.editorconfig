# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{py,pyi}]
indent_size = 4
max_line_length = 120

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

[*.go]
indent_style = tab
indent_size = 4

[*.{yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[*.json]
indent_size = 2

[*.tf]
indent_size = 2

[*.rs]
indent_size = 4

[*.java]
indent_size = 4

[*.{html,css,scss}]
indent_size = 2

[{package.json,package-lock.json}]
indent_size = 2

[.env*]
indent_size = 2

[Dockerfile]
indent_size = 2
