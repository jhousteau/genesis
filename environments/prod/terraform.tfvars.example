# Production Environment Configuration Example
# Copy this file to terraform.tfvars and update with your values

# Required: Organization Configuration
org_id          = "123456789012"  # Your GCP organization ID
billing_account = "XXXXXX-XXXXXX-XXXXXX"  # Your billing account ID

# Optional: Folder Configuration
# folder_id = "folders/123456789012"  # Uncomment if creating project in a folder

# Project Configuration
create_project = true
project_id     = "genesis-prod"  # Must be globally unique
project_name   = "Genesis Production"  # Human-readable name
project_prefix = "genesis"  # Used for resource naming

# Region Configuration
primary_region = "us-central1"  # Primary region for resources
dr_region      = "us-east1"     # Disaster recovery region
enable_dr      = true            # Enable multi-region DR setup

# Network Configuration
network_name = "main"
primary_subnet_ranges = {
  main       = "10.10.0.0/24"   # Main subnet for VMs
  serverless = "10.10.1.0/24"   # Serverless VPC connector
  pods       = "10.11.0.0/16"   # GKE pods
  services   = "10.12.0.0/16"   # GKE services
}

dr_subnet_ranges = {
  main       = "10.20.0.0/24"   # DR main subnet
  serverless = "10.20.1.0/24"   # DR serverless
  pods       = "10.21.0.0/16"   # DR GKE pods
  services   = "10.22.0.0/16"   # DR GKE services
}

# Storage Configuration
storage_location      = "US"  # Multi-region storage location
backup_retention_days = 90    # Days to retain backups

# Artifact Registry Configuration
artifact_registry_name = "containers"

# Firestore Configuration
enable_firestore   = true
firestore_location = "nam5"  # US multi-region

# Cloud SQL Configuration (Optional)
enable_cloud_sql  = false
cloud_sql_version = "POSTGRES_15"
cloud_sql_tier    = "db-n1-standard-2"  # Production-grade instance

# Monitoring Configuration
enable_monitoring_workspace = true

# Budget Configuration
budget_amount = 1000  # Monthly budget in USD
notification_channels = []  # Add monitoring channel IDs for alerts

# Additional APIs to activate
activate_apis = [
  # Add any additional APIs needed
  # "vision.googleapis.com",
  # "speech.googleapis.com",
]

# Labels for all resources
labels = {
  environment = "prod"
  managed-by  = "terraform"
  team        = "platform"
  cost-center = "production"
  compliance  = "pci-dss"  # Add compliance tags if needed
}