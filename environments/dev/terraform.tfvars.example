# Development Environment Configuration Example
# Copy this file to terraform.tfvars and update with your values

# Required: Organization Configuration
org_id          = "123456789012"  # Your GCP organization ID
billing_account = "XXXXXX-XXXXXX-XXXXXX"  # Your billing account ID

# Optional: Folder Configuration
# folder_id = "folders/123456789012"  # Uncomment if creating project in a folder

# Project Configuration
create_project = true
project_id     = "whai-genesis-dev"  # Must be globally unique
project_name   = "Genesis Development"  # Human-readable name
project_prefix = "genesis"  # Used for auto-generated names

# Region Configuration
region = "us-central1"

# Network Configuration
network_name = "main"
subnet_ranges = {
  main       = "10.0.0.0/24"    # Main subnet for VMs
  serverless = "10.0.1.0/24"    # Serverless VPC connector
  pods       = "10.1.0.0/16"    # GKE pods
  services   = "10.2.0.0/16"    # GKE services
}

# Artifact Registry Configuration
artifact_registry_name = "containers"

# Firestore Configuration
enable_firestore   = true
firestore_location = "nam5"  # US multi-region

# Storage Configuration
force_destroy_buckets = true  # Allow destruction in dev

# Budget Configuration
budget_amount = 100  # Monthly budget in USD
notification_channels = []  # Add monitoring channel IDs for alerts

# Additional APIs to activate
activate_apis = [
  # Add any additional APIs needed
  # "dialogflow.googleapis.com",
  # "translate.googleapis.com",
]

# Labels for all resources
labels = {
  environment = "dev"
  managed-by  = "terraform"
  team        = "platform"
  cost-center = "development"
}
