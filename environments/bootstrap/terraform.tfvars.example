# Bootstrap Environment Configuration Example
# Copy this file to terraform.tfvars and update with your values

# Required: Organization Configuration
org_id          = "123456789012"  # Your GCP organization ID
billing_account = "XXXXXX-XXXXXX-XXXXXX"  # Your billing account ID

# Required: Project Configuration
project_id   = "genesis-bootstrap"  # Must be globally unique
project_name = "Genesis Bootstrap"  # Human-readable name

# Optional: Folder Configuration
# folder_id = "folders/123456789012"  # Uncomment if creating project in a folder

# Region Configuration
region = "us-central1"

# State Backend Configuration
# state_bucket_name = ""  # Leave empty to auto-generate
state_bucket_location   = "US"  # Options: US, EU, ASIA, or specific region
enable_state_encryption = true

# Service Account Configuration
terraform_sa_name = "terraform-automation"
create_sa_key     = false  # Set to true only for local development
grant_org_admin   = false  # Set to true if managing org-level resources

# Workload Identity Configuration (for GitHub Actions)
enable_workload_identity = false
# github_org  = "your-github-org"   # Required if enable_workload_identity = true
# github_repo = "your-repo-name"    # Optional: leave empty for org-wide access

# Network Configuration
create_bootstrap_network = false
# bootstrap_subnet_cidr = "10.0.0.0/24"  # Customize if needed

# Additional APIs to activate
activate_apis = [
  # Add any additional APIs needed
  # "compute.googleapis.com",
  # "container.googleapis.com",
]

# Labels for all resources
labels = {
  environment = "bootstrap"
  managed-by  = "terraform"
  owner       = "platform-team"
  cost-center = "infrastructure"
}
