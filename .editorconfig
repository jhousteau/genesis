# Genesis Editor Configuration
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 88

[*.{js,ts,jsx,tsx}]
indent_size = 2
max_line_length = 100

[*.go]
indent_style = tab
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{tf,tfvars}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{json,jsonc}]
indent_size = 2

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{dockerfile,Dockerfile*}]
indent_size = 2
