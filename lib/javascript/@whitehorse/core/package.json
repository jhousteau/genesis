{
  "name": "@whitehorse/core",
  "version": "1.0.0",
  "description": "Whitehorse Core Library - Industrial-strength core library for the Universal Project Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "src/",
    "types/",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "prepare": "npm run clean && npm run build",
    "dev": "tsc --watch",
    "docs": "typedoc src/index.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "cloud",
    "gcp",
    "aws",
    "azure",
    "microservices",
    "infrastructure",
    "devops",
    "platform",
    "library",
    "utilities",
    "observability",
    "monitoring",
    "logging",
    "security",
    "configuration",
    "api-client",
    "nodejs",
    "typescript"
  ],
  "author": "Whitehorse Platform Team <platform@whitehorse.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/whitehorse/bootstrapper.git",
    "directory": "lib/javascript/@whitehorse/core"
  },
  "bugs": {
    "url": "https://github.com/whitehorse/bootstrapper/issues"
  },
  "homepage": "https://whitehorse-platform.readthedocs.io/",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "winston": "^3.11.0",
    "pino": "^8.16.0",
    "joi": "^17.11.0",
    "yaml": "^2.3.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.0",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "async": "^3.2.0",
    "p-retry": "^5.1.0",
    "p-timeout": "^6.1.0",
    "fast-glob": "^3.3.0",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.0",
    "@types/uuid": "^9.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/bcryptjs": "^2.4.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "typescript": "^5.2.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typedoc": "^0.25.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0"
  },
  "peerDependencies": {
    "@google-cloud/logging": "^10.0.0",
    "@google-cloud/secret-manager": "^4.0.0",
    "@google-cloud/monitoring": "^3.0.0",
    "redis": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "@google-cloud/logging": {
      "optional": true
    },
    "@google-cloud/secret-manager": {
      "optional": true
    },
    "@google-cloud/monitoring": {
      "optional": true
    },
    "redis": {
      "optional": true
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}