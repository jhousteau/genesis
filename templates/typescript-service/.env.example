# Genesis TypeScript Service Environment Configuration

# Node Environment
NODE_ENV=development
PORT=8080

# Service Configuration
SERVICE_NAME={{PROJECT_NAME}}
LOG_LEVEL=info

# Genesis Configuration
GENESIS_ENVIRONMENT=development

# GCP Configuration
GOOGLE_CLOUD_PROJECT={{GCP_PROJECT}}-dev
GOOGLE_CLOUD_REGION=us-central1
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME={{PROJECT_NAME}}
DB_USERNAME=postgres
# DB_PASSWORD=stored-in-secret-manager
DB_SSL=true
DB_CONNECTION_TIMEOUT=10000
DB_MAX_CONNECTIONS=20

# Redis Configuration (Optional)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=stored-in-secret-manager
REDIS_DB=0
REDIS_KEY_PREFIX=genesis:

# Authentication Configuration
# JWT_SECRET=stored-in-secret-manager
JWT_EXPIRES_IN=24h
JWT_ALGORITHM=HS256

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_TRACING=true
METRICS_PORT=9090

# MCP Configuration (Optional)
MCP_SERVER_ENABLED=false
MCP_SERVER_PORT=3001
# MCP_CLIENT_URL=ws://localhost:3001
