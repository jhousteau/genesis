{
  "name": "@genesis/{{PROJECT_NAME}}",
  "version": "1.0.0",
  "description": "Genesis TypeScript Service - {{PROJECT_DESCRIPTION}}",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "src/",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "npm run build:watch & npm run start:dev",
    "start": "node dist/index.js",
    "start:dev": "nodemon dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --collectCoverageFrom='src/**/*.ts' --coverageReporters=text-lcov | coveralls",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "clean": "rimraf dist coverage .nyc_output",
    "prepare": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc src/index.ts --out docs",
    "deploy": "npm run build && npm run test && npm run deploy:gcp",
    "deploy:gcp": "./scripts/deploy-to-gcp.sh",
    "docker:build": "docker build -t {{PROJECT_NAME}} .",
    "docker:run": "docker run -p 8080:8080 {{PROJECT_NAME}}",
    "gcp:deploy": "gcloud run deploy {{PROJECT_NAME}} --source .",
    "smart-commit": "../../../scripts/smart-commit.sh"
  },
  "keywords": [
    "genesis",
    "typescript",
    "gcp",
    "microservice",
    "cloud-native",
    "serverless",
    "express",
    "fastify",
    "monitoring",
    "observability",
    "security"
  ],
  "author": "Genesis Platform Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "{{REPOSITORY_URL}}",
    "directory": "{{DIRECTORY_PATH}}"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@whitehorse/core": "^1.0.0",
    "fastify": "^4.24.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.0",
    "@fastify/rate-limit": "^8.0.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.0",
    "dotenv": "^16.3.0",
    "joi": "^17.11.0",
    "axios": "^1.6.0",
    "winston": "^3.11.0",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "async": "^3.2.4",
    "p-retry": "^5.1.2",
    "p-timeout": "^6.1.2",
    "@google-cloud/logging": "^11.0.0",
    "@google-cloud/secret-manager": "^5.0.0",
    "@google-cloud/monitoring": "^4.0.0",
    "@google-cloud/pubsub": "^4.0.0",
    "@google-cloud/firestore": "^7.0.0",
    "@google-cloud/storage": "^7.0.0",
    "@google-cloud/functions-framework": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/jest": "^29.5.5",
    "@types/lodash": "^4.14.199",
    "@types/uuid": "^9.0.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/bcryptjs": "^2.4.4",
    "@types/async": "^3.2.21",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "typescript": "^5.2.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "typedoc": "^0.25.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.14",
    "coveralls": "^3.1.1",
    "nyc": "^15.1.0"
  },
  "peerDependencies": {
    "@google-cloud/logging": "^11.0.0",
    "@google-cloud/secret-manager": "^5.0.0",
    "@google-cloud/monitoring": "^4.0.0",
    "redis": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "@google-cloud/logging": {
      "optional": true
    },
    "@google-cloud/secret-manager": {
      "optional": true
    },
    "@google-cloud/monitoring": {
      "optional": true
    },
    "redis": {
      "optional": true
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test",
      "pre-push": "npm run lint && npm run typecheck && npm run test"
    }
  },
  "publishConfig": {
    "access": "restricted"
  },
  "genesis": {
    "template": "typescript-service",
    "version": "1.0.0",
    "features": [
      "fastify",
      "gcp-integration",
      "monitoring",
      "testing",
      "docker",
      "smart-commit"
    ]
  }
}
