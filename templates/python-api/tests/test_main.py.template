"""Tests for main application."""

import pytest
from fastapi.testclient import TestClient

from {{module_name}}.main import app

client = TestClient(app)


def test_root_endpoint():
    """Test the root endpoint returns welcome message."""
    response = client.get("/")
    assert response.status_code == 200
    data = response.json()
    assert data["message"] == "Welcome to {{project_name}}!"


def test_health_check():
    """Test the health check endpoint."""
    response = client.get("/health")
    assert response.status_code == 200
    data = response.json()
    assert data["status"] == "healthy"
    assert data["service"] == "{{project_name}}"
    assert data["version"] == "0.1.0"


@pytest.mark.asyncio
async def test_root_endpoint_async():
    """Test root endpoint using async client."""
    from httpx import AsyncClient

    async with AsyncClient(app=app, base_url="http://test") as ac:
        response = await ac.get("/")

    assert response.status_code == 200
    data = response.json()
    assert "Welcome to {{project_name}}" in data["message"]
