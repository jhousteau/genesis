# Genesis Development Environment Configuration
# This file contains environment-specific settings for development

# Environment identifier
ENVIRONMENT="dev"
ENVIRONMENT_TYPE="development"

# GCP Configuration
PROJECT_ID="${PROJECT_ID_DEV:-whai-genesis-dev}"
REGION="us-central1"
ZONE="us-central1-a"

# Resource naming suffix
RESOURCE_SUFFIX="dev"

# Network Configuration
SUBNET_CIDR="10.0.0.0/24"
SECONDARY_RANGE_PODS="10.1.0.0/16"
SECONDARY_RANGE_SERVICES="10.2.0.0/20"

# Compute Configuration
MACHINE_TYPE="e2-standard-2"
USE_PREEMPTIBLE=true
ENABLE_PUBLIC_IP=true
MAX_INSTANCES=5

# GKE Configuration
GKE_NODE_COUNT=2
GKE_MIN_NODES=1
GKE_MAX_NODES=3
GKE_MACHINE_TYPE="e2-standard-2"
ENABLE_AUTOPILOT=false
ENABLE_WORKLOAD_IDENTITY=true

# Storage Configuration
DISK_SIZE=50
DISK_TYPE="pd-standard"
BOOT_DISK_SIZE=20
ENABLE_BACKUPS=false
BACKUP_RETENTION_DAYS=7

# Database Configuration
DB_TIER="db-f1-micro"
DB_VERSION="POSTGRES_14"
DB_BACKUP_ENABLED=false
DB_HIGH_AVAILABILITY=false
DB_STORAGE_SIZE=10

# Cost Management
MONTHLY_BUDGET=100
ALERT_THRESHOLD_PERCENT=90
AUTO_SHUTDOWN_HOURS=4
ENABLE_AUTO_SHUTDOWN=true

# Security Configuration
ENABLE_PRIVATE_GOOGLE_ACCESS=true
ENABLE_FLOW_LOGS=false
ENABLE_CLOUD_ARMOR=false
ENABLE_CLOUD_NAT=true
ENABLE_BINARY_AUTHORIZATION=false

# Monitoring Configuration
LOG_RETENTION_DAYS=7
METRIC_RETENTION_DAYS=30
ENABLE_MONITORING=true
ENABLE_LOGGING=true
ENABLE_TRACING=true
ENABLE_PROFILING=false
ENABLE_ERROR_REPORTING=true

# Development Features
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG=true
ENABLE_VERBOSE_LOGGING=true
ENABLE_DEV_TOOLS=true

# CI/CD Configuration
ENABLE_CI_CD=true
CI_BRANCH_PATTERN="feature/*|develop"
DEPLOY_ON_PUSH=true
RUN_TESTS_ON_COMMIT=true

# Resource Limits
MAX_CPU_PER_CONTAINER="2"
MAX_MEMORY_PER_CONTAINER="4Gi"
MAX_STORAGE_PER_VOLUME="100Gi"

# Service URLs (internal)
API_URL="https://api-dev.genesis.internal"
WEB_URL="https://web-dev.genesis.internal"
MONITORING_URL="https://monitoring-dev.genesis.internal"

# External integrations
SLACK_WEBHOOK_URL=""
PAGERDUTY_INTEGRATION_KEY=""
GITHUB_WEBHOOK_SECRET=""

# Feature flags
FEATURE_NEW_UI=true
FEATURE_ADVANCED_MONITORING=false
FEATURE_EXPERIMENTAL=true

# Scaling Configuration
MIN_REPLICAS=1
MAX_REPLICAS=3
TARGET_CPU_UTILIZATION=70

# Development tools
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_ADMIN_PANEL=true

# Cache Configuration
REDIS_ENABLED=true
REDIS_SIZE="1GB"
MEMCACHED_ENABLED=false

# Queue Configuration
PUBSUB_ENABLED=true
MAX_QUEUE_SIZE=1000
WORKER_COUNT=2

# Secrets Management
USE_SECRET_MANAGER=true
SECRET_ROTATION_DAYS=0  # Disabled in dev

# Compliance
REQUIRE_ENCRYPTION_AT_REST=false
REQUIRE_ENCRYPTION_IN_TRANSIT=true
AUDIT_LOGGING_ENABLED=false

# Terraform State
TF_STATE_BUCKET="tf-state-whai-genesis-dev"
TF_STATE_PREFIX="genesis/dev"

# Container Registry
CONTAINER_REGISTRY="us-central1-docker.pkg.dev"
ARTIFACT_REPOSITORY="whai-genesis-dev/containers"

# Tags and Labels
DEFAULT_LABELS="environment=dev,project=genesis,managed-by=terraform"
DEFAULT_TAGS="whai-genesis-dev"

# Notification Settings
ALERT_EMAIL=""
ALERT_SMS=""

# Export environment type for scripts
export ENVIRONMENT_TYPE
